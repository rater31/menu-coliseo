---
import Layout from '../layouts/Layout.astro';
import coliseo from '../img/coliseo.png'
import Cards from '../components/Cards.astro';
import Listado from '../components/Listado.astro';
import flor from '../img/coliseo.png'
import postre from '../img/postres.jpg'
import cafeteria from '../img/cafeteria.jpg'
import bebidas from '../img/bebidas.jpg'
import platos from '../img/platos.jpg'
import Image from 'astro/components/Image.astro';
---

<Layout title="Welcome to Astro.">
	<main class="flex flex-wrap justify-center overflow-hidden">
		<div class="w-full flex justify-center ">
			<img src={coliseo.src} class="w-[276px] "/>
		</div>
		<div class="flex w-full justify-around  md:justify-center">
			<Cards nn="cafeteria"> <Image class='img' src={cafeteria} alt=""/></Cards>
			<Cards nn="platos"> <Image class='img' src={platos} alt=""/></Cards>
			<Cards nn="bebidas"> <Image class='img' src={bebidas} alt=""/></Cards>
			<Cards nn="postres"> <Image class='img' src={postre} alt=""/></Cards>
		</div>
		<Listado></Listado>
		

	</main>
</Layout>


<style>
	.img{
		width: 100%;
		height: 100%;
		border-radius: 5px;
	}
</style>